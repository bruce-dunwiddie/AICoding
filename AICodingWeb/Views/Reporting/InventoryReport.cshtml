@model IEnumerable<AICodingWeb.Controllers.InventoryItemViewModel>

@{
    ViewData["Title"] = "Inventory Report";
}

<div class="container">
    <h1>Inventory Report</h1>
    
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Filter Options</h5>
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="category" class="form-label">Category</label>
                    <select class="form-select" id="category" name="category">
                        <option value="">All Categories</option>
                        @foreach (var category in ViewBag.Categories)
                        {
                            <option value="@category" selected="@(ViewBag.Category == category)">@category</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="stockLevel" class="form-label">Stock Level</label>
                    <select class="form-select" id="stockLevel" name="stockLevel">
                        <option value="">All Levels</option>
                        <option value="low" selected="@(ViewBag.StockLevel == "low")">Low Stock</option>
                        <option value="out" selected="@(ViewBag.StockLevel == "out")">Out of Stock</option>
                        <option value="excess" selected="@(ViewBag.StockLevel == "excess")">Excess Stock</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="sortBy" class="form-label">Sort By</label>
                    <select class="form-select" id="sortBy" name="sortBy">
                        <option value="name" selected="@(ViewBag.SortBy == "name")">Name</option>
                        <option value="stockLevel" selected="@(ViewBag.SortBy == "stockLevel")">Stock Level</option>
                        <option value="value" selected="@(ViewBag.SortBy == "value")">Value</option>
                        <option value="turnover" selected="@(ViewBag.SortBy == "turnover")">Turnover Rate</option>
                    </select>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Apply Filters</button>
                    <a asp-action="InventoryReport" class="btn btn-secondary">Reset</a>
                </div>
            </form>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Items</h5>
                    <p class="card-text display-4">@ViewBag.TotalItems</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h5 class="card-title">Low Stock Items</h5>
                    <p class="card-text display-4">@ViewBag.LowStockItems</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <h5 class="card-title">Out of Stock</h5>
                    <p class="card-text display-4">@ViewBag.OutOfStockItems</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Value</h5>
                    <p class="card-text display-4">@ViewBag.TotalValue</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Inventory Items</h5>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Item ID</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Stock Level</th>
                            <th>Unit Price</th>
                            <th>Total Value</th>
                            <th>Turnover Rate</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.StockItemID</td>
                                    <td>@item.StockItemName</td>
                                    <td>@item.Categories</td>
                                    <td>
                                        @if (item.CurrentStock <= 0)
                                        {
                                            <span class="badge bg-danger">Out of Stock</span>
                                        }
                                        else if (item.CurrentStock < 10)
                                        {
                                            <span class="badge bg-warning">@item.CurrentStock</span>
                                        }
                                        else if (item.CurrentStock > 100)
                                        {
                                            <span class="badge bg-info">@item.CurrentStock</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">@item.CurrentStock</span>
                                        }
                                    </td>
                                    <td>@item.UnitPrice.ToString("C")</td>
                                    <td>@item.TotalValue.ToString("C")</td>
                                    <td>@item.TurnoverRate.ToString("F2")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center">No inventory data available</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 