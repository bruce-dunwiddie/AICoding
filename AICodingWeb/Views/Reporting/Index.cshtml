@{
    ViewData["Title"] = "Reporting Dashboard";
}

<div class="container">
    <h1>Reporting Dashboard</h1>
    
    <div class="row mt-4">
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Sales Reports</h5>
                    <p class="card-text">View sales performance, revenue, and trends.</p>
                    <a asp-action="SalesReport" class="btn btn-primary">View Sales Reports</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Inventory Reports</h5>
                    <p class="card-text">Monitor stock levels, turnover, and inventory value.</p>
                    <a asp-action="InventoryReport" class="btn btn-primary">View Inventory Reports</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Shipping Reports</h5>
                    <p class="card-text">Track shipping performance and delivery times.</p>
                    <a asp-action="ShippingReport" class="btn btn-primary">View Shipping Reports</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Customer Reports</h5>
                    <p class="card-text">Analyze customer data, purchasing patterns, and satisfaction.</p>
                    <a asp-action="CustomerReport" class="btn btn-primary">View Customer Reports</a>
                </div>
            </div>
        </div>
    </div>
</div> 