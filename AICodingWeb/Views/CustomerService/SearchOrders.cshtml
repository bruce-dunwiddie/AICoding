@model IEnumerable<AICodingWeb.Controllers.OrderSearchViewModel>

@{
    ViewData["Title"] = "Search Orders";
}

<div class="container">
    <h1>Search Orders</h1>

    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="customerName" class="form-label">Customer Name</label>
                    <input type="text" class="form-control" id="customerName" name="customerName" value="@ViewBag.CustomerName">
                </div>
                <div class="col-md-4">
                    <label for="orderDate" class="form-label">Order Date</label>
                    <input type="date" class="form-control" id="orderDate" name="orderDate" value="@ViewBag.OrderDate">
                </div>
                <div class="col-md-4">
                    <label for="orderStatus" class="form-label">Order Status</label>
                    <select class="form-select" id="orderStatus" name="orderStatus">
                        <option value="">All</option>
                        <option value="unshipped" selected="@(ViewBag.OrderStatus == "unshipped")">Unshipped</option>
                        <option value="shipped" selected="@(ViewBag.OrderStatus == "shipped")">Shipped</option>
                    </select>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Search</button>
                    <a asp-action="SearchOrders" class="btn btn-secondary">Clear</a>
                </div>
            </form>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="alert alert-info">
            Showing @Model.Count() of @ViewBag.TotalOrders orders.
        </div>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Customer</th>
                        <th>Order Date</th>
                        <th>Expected Delivery</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.OrderID</td>
                            <td>@order.CustomerName</td>
                            <td>@order.OrderDate.ToShortDateString()</td>
                            <td>@order.ExpectedDeliveryDate.ToShortDateString()</td>
                            <td>
                                @if (order.PickingCompletedWhen == null)
                                {
                                    <span class="badge bg-warning">Unshipped</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Shipped</span>
                                }
                            </td>
                            <td>
                                <a asp-action="EditOrder" asp-route-id="@order.OrderID" class="btn btn-primary btn-sm">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @{
                        var currentPage = ViewBag.CurrentPage;
                        var totalPages = ViewBag.TotalPages;
                        var startPage = Math.Max(1, currentPage - 2);
                        var endPage = Math.Min(totalPages, startPage + 4);
                        startPage = Math.Max(1, endPage - 4);
                    }

                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="SearchOrders" 
                           asp-route-page="1" 
                           asp-route-customerName="@ViewBag.CustomerName"
                           asp-route-orderDate="@ViewBag.OrderDate"
                           asp-route-orderStatus="@ViewBag.OrderStatus"
                           aria-label="First">
                            <span aria-hidden="true">&laquo;&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="SearchOrders" 
                           asp-route-page="@(currentPage - 1)"
                           asp-route-customerName="@ViewBag.CustomerName"
                           asp-route-orderDate="@ViewBag.OrderDate"
                           asp-route-orderStatus="@ViewBag.OrderStatus"
                           aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>

                    @for (int i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" asp-action="SearchOrders" 
                               asp-route-page="@i"
                               asp-route-customerName="@ViewBag.CustomerName"
                               asp-route-orderDate="@ViewBag.OrderDate"
                               asp-route-orderStatus="@ViewBag.OrderStatus">@i</a>
                        </li>
                    }

                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="SearchOrders" 
                           asp-route-page="@(currentPage + 1)"
                           asp-route-customerName="@ViewBag.CustomerName"
                           asp-route-orderDate="@ViewBag.OrderDate"
                           asp-route-orderStatus="@ViewBag.OrderStatus"
                           aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="SearchOrders" 
                           asp-route-page="@totalPages"
                           asp-route-customerName="@ViewBag.CustomerName"
                           asp-route-orderDate="@ViewBag.OrderDate"
                           asp-route-orderStatus="@ViewBag.OrderStatus"
                           aria-label="Last">
                            <span aria-hidden="true">&raquo;&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="alert alert-info">
            No orders found matching your search criteria.
        </div>
    }
</div> 